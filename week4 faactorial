package week4;

public class Factorial {
    public static int factorial(int n) {
        //Base case(s)
        if (n == 0 || n == 1){
            return 1;
        }
        // Recursive
        return n * factorial(n-1);
    }

    public static void main(String[] args) {
        int num = 5;
        System.out.println("Factorial of " + num + " is: " + factorial(num));
    }

}
